<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/thumbnailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:src="@drawable/photo_picker_raw_button_checked"/>

    <ImageView
            android:id="@+id/badgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/thumbnailView"
            android:layout_alignBottom="@id/thumbnailView"
            android:layout_marginBottom="@dimen/photo_picker_asset_badge_margin_bottom"
            android:layout_marginRight="@dimen/photo_picker_asset_badge_margin_right"
            android:src="@drawable/photo_picker_badge_live"/>

    <com.github.herokotlin.photopicker.view.SelectButton
            android:id="@+id/selectButton"
            android:layout_width="@dimen/photo_picker_select_button_width"
            android:layout_height="@dimen/photo_picker_select_button_height"
            android:layout_alignRight="@id/thumbnailView"
            android:layout_alignTop="@id/thumbnailView"/>

    <View
            android:id="@+id/overlayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/thumbnailView"
            android:layout_alignBottom="@id/thumbnailView"
            android:layout_alignLeft="@id/thumbnailView"
            android:layout_alignRight="@id/thumbnailView"
            android:background="@color/photo_picker_asset_overlay_color"/>


</RelativeLayout>