<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_picker_bottom_bar_height"
                android:paddingLeft="@dimen/photo_picker_bottom_bar_padding_horizontal"
                android:paddingRight="@dimen/photo_picker_bottom_bar_padding_horizontal"
                android:background="@color/photo_picker_bottom_bar_bg_color">

    <com.github.herokotlin.photopicker.view.RawButton
            android:id="@+id/rawButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@+id/submitButton"
            android:layout_width="@dimen/photo_picker_submit_button_width"
            android:layout_height="@dimen/photo_picker_submit_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/photo_picker_submit_button_title_text_size"
            android:textColor="@color/photo_picker_submit_button_title_text_color"
            android:text="@string/photo_picker_submit_button_title"
            android:enabled="false"
            android:alpha="0.5"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/photo_picker_submit_button"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>