<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/photo_picker_full_button_padding_vertical"
              android:paddingBottom="@dimen/photo_picker_full_button_padding_vertical"
              android:paddingLeft="@dimen/photo_picker_full_button_padding_horizontal"
              android:paddingRight="@dimen/photo_picker_full_button_padding_horizontal">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/photo_picker_raw_button_unchecked"/>

    <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/photo_picker_full_button_title_margin_left"
            android:textSize="@dimen/photo_picker_full_button_title_text_size"
            android:textColor="@color/photo_picker_full_button_title_text_color"
            android:text="@string/photo_picker_full_button_title"/>

</LinearLayout>